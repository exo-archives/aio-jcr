<D:search_templates xmlns:D="DAV:" xmlns:A="DAV:">

	<D:searchrequest>
		<D:sql>select * from nt:base</D:sql>
	</D:searchrequest>
	
	<D:searchrequest>		

		<D:basicsearch>
			
			<D:select>
				<D:prop>
					<D:displayname />
					<D:getcontentlength />
				</D:prop>
			</D:select>
			
			<D:from>
				<D:scope>
					<D:href>/test folder/</D:href>
					<D:depth>infinity</D:depth>
				</D:scope>
			</D:from>
			
			<D:where>
				<D:gt> 
					<D:prop>
						<D:getcontentlength/>
					</D:prop>
					<D:literal>10</D:literal>
				</D:gt>
			</D:where>
			
			<D:orderby>
				<D:order>
					<D:prop>
						<D:getcontentlength/>
					</D:prop>
					<D:ascending/>
				</D:order>
			</D:orderby>
			
		</D:basicsearch>		

	</D:searchrequest>	

	<A:searchrequest>
		<A:basicsearch>
			<A:select>
				<A:prop>
					<A:displayname/>
					<A:resourcetype/>
					<A:getcontentlength/>
				</A:prop>
			</A:select>
			<A:from>
				<A:scope>
					<A:href>/test1/</A:href>
					<A:depth>5</A:depth>
				</A:scope>
			</A:from>
			<A:where>
				<A:and>
					<A:eq>
						<A:prop>
							<jcr:primaryType xmlns:jcr="jcr:"/>
						</A:prop>
						<A:literal>text/xml</A:literal>
					</A:eq>
					<A:eq>
						<A:prop>
							<jcr:mimeType xmlns:jcr="jcr:"/>
						</A:prop>
						<A:literal>text/xml</A:literal>
					</A:eq>
				</A:and>
			</A:where>
		</A:basicsearch>
	</A:searchrequest>	
	
</D:search_templates>