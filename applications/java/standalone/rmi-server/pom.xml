  <build>
     <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>install</phase>
              <goals>
                <goal>directory</goal>
              </goals>
          </execution>
        </executions>
        <configuration>
        <descriptors>
          <descriptor>rmi-server-descriptor.xml</descriptor>
          <descriptor>rmi-server-codebase-descriptor.xml</descriptor>
        </descriptors>
          <finalName>rmi-server</finalName>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
                <configuration>
                  <tasks>
                    <java dir="${basedir}" className="org.exoplatform.connectors.jcr.RMIStarter"
                      fork="true"
                      failonerror="true"
                      maxmemory="128m">
                      <jvmarg value="-Djava.security.auth.login.config=res/jaas.conf"/>
                      <jvmarg value="-Djava.rmi.server.codebase=file:/${basedir}/target/rmi-server-codebase/"/>
					  <jvmarg value="-Djava.security.policy=res/java.policy"/>
                      <arg value="bind"/>
                      <arg value="res/configuration.xml"/>
                      <classpath>
                        <pathelement path="${classpath}"/>
                        <fileset dir="${basedir}/target">
                          <include name="**/rmi-server-1.6/*.jar"/>
                        </fileset>
                      </classpath>
                    </java>
                  </tasks>
                </configuration>
          </plugin>
      </plugins>
  </build>

