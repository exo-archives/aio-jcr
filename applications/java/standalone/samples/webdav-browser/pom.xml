<project>
  <parent>
    <groupId>org.exoplatform.jcr</groupId>
    <artifactId>config</artifactId>
    <version>1.7</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.jcr.applications.exodavbrowser</artifactId>
  <packaging>jar</packaging>
  <version>${org.exoplatform.jcr.version}</version>
  <name>eXo WebDav browser demo</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo WebDav browser demo</description>

<dependencies>

    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.framework.webdavclient</artifactId>
      <version>${org.exoplatform.jcr.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.exoplatform.core</groupId>
      <artifactId>exo.core.component.common</artifactId>
      <version>${org.exoplatform.core.version}</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.framework.httpclient</artifactId>
      <version>${org.exoplatform.jcr.version}</version>
      <scope>compile</scope>
    </dependency>

  <!-- dependency>
    <groupId>commons-logging</groupId>
    <artifactId>commons-logging</artifactId>
    <version>1.0.4</version>
    <scope>compile</scope>
  </dependency -->

  <!-- dependency>
    <groupId>log4j</groupId>
    <artifactId>log4j</artifactId>
    <version>1.2.8</version>
    <scope>compile</scope>
  </dependency -->


</dependencies>

<build>

    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
      <include>**/*.png</include>
          <include>**/*.gif</include>
          <include>**/*.jpg</include>
        </includes>
      </resource>
    </resources>

  <plugins>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-jar-plugin</artifactId>
    <executions>
      <execution>
        <phase>compile</phase>
          <goals>
        <goal>jar</goal>
          </goals>
      </execution>
    </executions>
    <configuration>
      <archive>
            <manifestEntries>
              <Main-Class>org/exoplatform/applications/exodavbrowser/eXoDavBrowser</Main-Class>
              <Sealed>true</Sealed>
        </manifestEntries>
        <manifest>
          <addClasspath>true</addClasspath>
        </manifest>
      </archive>
    </configuration>
    </plugin>

    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/NOTEST_Test_eXoDavBrowser.java</include>
          </includes>
      </configuration>
    </plugin>


    <plugin>
      <artifactId>maven-assembly-plugin</artifactId>
        <version>2.1</version>
      <executions>
            <execution>
          <phase>compile</phase>
            <goals>
          <goal>attached</goal>
            </goals>
        </execution>
      </executions>

        <configuration>
      <archive> <!-- Please document this -->
            <manifest>
               <mainClass>org/exoplatform/applications/exodavbrowser/eXoDavBrowser</mainClass>
            </manifest>
          </archive>

          <descriptor>jar-with-dependencies.xml</descriptor>
            <finalName>eXoDavBrowser</finalName>
            <outputDirectory>bin</outputDirectory>
          <workDirectory>target/assembly/work</workDirectory>
        </configuration>
    </plugin>


  </plugins>


</build>
</project>
