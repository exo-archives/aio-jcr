<repository-service default-repository="db1">
  <repositories>
    <repository name="db1" system-workspace="ws" default-workspace="ws">
     <security-domain>exo-domain</security-domain>
     <access-control>optional</access-control>
      <authentication-policy>org.exoplatform.services.jcr.impl.core.access.JAASAuthenticator</authentication-policy>
      <workspaces>
       
        <workspace name="ws" auto-init-root-nodetype="nt:unstructured">
          <container class="org.exoplatform.services.jcr.impl.storage.jdbc.JDBCWorkspaceDataContainer">
            <properties>
              <property name="sourceName" value="jdbcjcr"/>
              <property name="db-type" value="oracle"/>
              
              <!-- property name="db-driver" value="oracle.jdbc.OracleDriver"/>
              <property name="db-url" value="jdbc:oracle:thin:@127.0.0.1:1521/XE"/>
              <property name="db-username" value="exoadmin"/>
              <property name="db-password" value="exo12321"/ -->
            
              <property name="multi-db" value="false"/>
              <property name="update-storage" value="false"/>
              <property name="max-buffer-size" value="204800"/>
              <property name="swap-directory" value="/uploder/target/temp/swap/ws"/>
            </properties>
          </container>
          <cache enabled="true">
            <properties>
              <property name="maxSize" value="10000"/>
              <property name="liveTime" value="1800"/><!-- 30 min -->
            </properties>
          </cache>
          <!-- query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
            <properties>
              <property name="indexDir" value="/uploder/target/temp/index"/>
            </properties>
          </query-handler -->
        </workspace>        
      </workspaces>
    </repository>
  </repositories>
</repository-service>
