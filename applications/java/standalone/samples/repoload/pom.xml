	<build>

		<resources>

			<resource>
				<directory>src/java</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.html</include>
					<include>**/*.ion</include>
				</includes>
			</resource>

		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<archive>
						<manifestEntries>
							<Main-Class>
								org/exoplatform/applications/repoload/RepositoryDataUploader
							</Main-Class>
							<Sealed>true</Sealed>
						</manifestEntries>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
					</execution>
				</executions>

				<configuration>
					<archive><!-- Please document this -->
						<manifest>
							<mainClass>
								org/exoplatform/applications/repoload/RepositoryDataUploader
							</mainClass>
						</manifest>
					</archive>

					<descriptor>jar-with-dependencies.xml</descriptor>
					<finalName>repoload</finalName>
					<outputDirectory>bin</outputDirectory>
					<workDirectory>target/assembly/work</workDirectory>
				</configuration>
			</plugin>


		</plugins>
	</build>


