<assembly>
  <id>binary</id>
  <formats>
    <format>zip</format>
    <!-- <format>dir</format> : dir can't be deployed in a maven repo -->
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>bin/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${basedir}/target/${project.artifactId}-${project.version}.jar</source>
      <destName>lib/${project.artifactId}-binary.jar</destName>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
        <include>jcr:jcr</include>
        <include>org.exoplatform.jcr:exo.jcr.component.core</include>
        <include>org.exoplatform.jcr:exo.jcr.component.rmi</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
