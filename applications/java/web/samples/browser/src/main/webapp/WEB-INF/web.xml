<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>exoplatform-jcr</display-name>
  
  <filter>
    <filter-name>JcrRMIBrowserFilterUser</filter-name>
    <filter-class>org.exoplatform.filters.jcr.JcrRMIBrowserFilterUser</filter-class>
  </filter>
  
  <filter>
    <filter-name>JcrRMIBrowserFilterAdmin</filter-name>
    <filter-class>org.exoplatform.filters.jcr.JcrRMIBrowserFilterAdmin</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>JcrRMIBrowserFilterAdmin</filter-name>
    <url-pattern>/admin/index.jsp</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>JcrRMIBrowserFilterUser</filter-name>
    <url-pattern>/user/index.jsp</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>org.exoplatform.frameworks.jcr.web.StandaloneContainerInitializedListener</listener-class>
  </listener>	
	
  <listener>
    <listener-class>org.exoplatform.listeners.jcr.SessionListener</listener-class>
  </listener>  

<!-- The Welcome File List for IBM WebSphere -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- resource-env-ref>
    <description>Content Repository</description>
    <resource-env-ref-name>jcr/repository</resource-env-ref-name>
    <resource-env-ref-type>javax.jcr.Repository</resource-env-ref-type>
  </resource-env-ref -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>user authentication</web-resource-name>
      <url-pattern>/user/*</url-pattern>
      <http-method>POST</http-method>
      <http-method>GET</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin authentication</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <http-method>POST</http-method>
      <http-method>GET</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <!-- realm-name>default</realm-name -->
    <realm-name>exo-domain</realm-name>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login-error.jsp</form-error-page>
    </form-login-config>
  </login-config>

  <security-role>
    <description>a simple user role</description>
    <role-name>user</role-name>
  </security-role>
  <security-role>
    <role-name>admin</role-name>
  </security-role>
</web-app>
