      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>compile</phase> <!--process-classes-->
            <configuration>
              <tasks>
                <taskdef name="bind" classname="org.jibx.binding.ant.CompileTask"
                  classpathref="maven.dependency.classpath"/>
                <bind load="true" binding="${basedir}/src/main/resources/binding.xml">
                  <classpathset dir="${basedir}/target/classes"/>
                </bind>
                <bind load="true" binding="${basedir}/src/main/resources/binding-nodetypevalues.xml">
                  <classpathset dir="${basedir}/target/classes"/>
                </bind>
              </tasks>
            </configuration>
            <goals><goal>run</goal></goals>
          </execution>
        </executions>
      </plugin>
