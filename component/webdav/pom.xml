<project>
  <parent>
    <groupId>org.exoplatform.jcr</groupId>
    <artifactId>config</artifactId>
    <version>trunk</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.jcr.component.webdav</artifactId>
  <packaging>jar</packaging>
  <version>${org.exoplatform.jcr.version}</version>
  <name>eXo JCR Webdav Service</name>
  <url>http://www.exoplatform.org</url>
  <description>eXo JCR Webdav Service</description>

  <dependencies>

     <dependency>
       <groupId>org.exoplatform.ws.rest</groupId>
       <artifactId>exo.ws.rest.core</artifactId>
       <version>${org.exoplatform.ws.version}</version>
       <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.component.ext</artifactId>
      <version>${org.exoplatform.jcr.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.component.core</artifactId>
      <version>${org.exoplatform.jcr.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <scope>compile</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals><goal>jar</goal></goals>
          </execution>
        </executions>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip> <!-- ${exo.test.skip} -->
          <useFile>${exo.test.use.file}</useFile>
          <forkMode>never</forkMode><!--once , pertest -->
          <includes>
            <!-- include>**/Test*.java</include -->

			  <include>**/TestAllPropResponceEntity.java</include>
			  <include>**/TestPropResponseEntity.java</include>
			  <include>**/TestPropNamesResponseEntity.java</include>
			  <include>**/TestSupportedLock.java</include>
			  <include>**/TestLockDiscovery.java</include>
			  <include>**/TestMkCol.java</include>
			  <include>**/TestDelete.java</include>
			  <include>**/TestPut.java</include>
			  <include>**/TestGet.java</include>
			  <include>**/TestCopy.java</include>
			  <include>**/TestMove.java</include>
			  <include>**/TestVersionControl.java</include>
			  <include>**/TestCheckIn.java</include>
			  <include>**/TestCheckOut.java</include>
			  <include>**/TestUnCkeckOut.java</include>
			  <include>**/TestVersionTreeResponseEntity.java</include>
			  <include>**/TestVersionTreeReport.java</include>
			  <include>**/TestLock.java</include>
			  <include>**/TestUnLock.java</include>
			  <include>**/TestHead.java</include>
			  <include>**/PropPatchTest.java</include>
			  <include>**/TestOrderSupport.java</include>
			  <include>**/TestOrderFirst.java</include>
			  <include>**/TestOrderLast.java</include>
			  <include>**/TestOrderBefore.java</include>
			  <include>**/TestOrderAfter.java</include>
			  <include>**/TestMultipleOrder.java</include>
			  <include>**/TestGetByVersion.java</include>

            <!-- include>**/TestSQLSearch.java</include -->

          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
