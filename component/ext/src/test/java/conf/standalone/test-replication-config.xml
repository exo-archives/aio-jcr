          <property name="snapshot-dir" value="target/replication/backup"/>
          <property name="delay-time" value="70000"/>
      </properties-param>
      <properties-param>
        <name>replication-priority-properties</name>
          <property name="priority-type" value ="static"/> <!-- {static, dynamic} --> 
          <property name="node-priority" value="100"/> <!-- max == 100 -->
      </properties-param>
    </init-params>
