<?xml version="1.0" encoding="ISO-8859-1"?>

<configuration>
	<component>
		<key>org.exoplatform.services.cifs.CIFSServiceImpl</key>
		<type>org.exoplatform.services.cifs.CIFSServiceImpl</type>
		<init-params>
			
			<!--Server name -->
			<value-param>
				<name>server_name</name>
				<value>SMBServer</value>
			</value-param>
			
			<!--Worgroup - if not determined used local domain name-->
			<!--value-param>
			<name>workgroup</name>
			<value>blabla</value>
			</value-param-->
			
			<!--Comment - set server comment-->
			<value-param>
				<name>comment</name>
				<value>This server is specific SMB server which works with JCR
					repository.</value>
			</value-param>
			
			<!--Tcp/Ip SMB transport layer use -->
			<value-param>
				<name>tcpipsmb</name>
				<value>false</value>
			</value-param>
			
			
			<!-- use Java implemented NetBIOS SMB transport layer - valid for nonWindows systems-->
			<value-param>
				<name>netbios</name>
				<value>false</value>
			</value-param>
			
			<!--use JNI NetBIOS SMB transport layer - only for Windows-->
			<value-param>
				<name>winNetBIOS</name>
				<value>true</value>
			</value-param>
			
			<!--Set NetBIOS name - if param not determined used server_name-->
			<value-param>
				<name>netbiosname</name>
				<value>KTestCIFS</value>
			</value-param>
			
			<!--LANA - if not determined or equal -1 used all available -->
			<value-param>
				<name>lanas</name>
				<value>-1</value>
			</value-param>
			
			<!-- native API for Win NetBIOS : netbios or winsock -->
			<value-param>
				<name>nativeapi</name>
				<value>netbios</value><!--winsock-->
			</value-param>
			
		</init-params>
	</component>
</configuration>