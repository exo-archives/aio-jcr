    <param name="usecase.propertyType1SizeInKb" value="5000" />
    <param name="usecase.propertyType2Count" value="0" />
    <param name="usecase.propertyType2SizeInKb" value="0" />
  </testCase>

  <testCase name="NodeGetSamePropertyTestMulti10K">
    <param name="exo.testClass" value="org.exoplatform.jcr.benchmark.usecases.NodeGetSamePropertyTest" />
    <param name="usecase.propertyType1Count" value="10" />
    <param name="usecase.propertyType1SizeInKb" value="10" />
    <param name="usecase.propertyType2Count" value="0" />
    <param name="usecase.propertyType2SizeInKb" value="0" />
  </testCase>
  <testCase name="NodeGetSamePropertyTestMulti5M">
    <param name="exo.testClass" value="org.exoplatform.jcr.benchmark.usecases.NodeGetSamePropertyTest" />
    <param name="usecase.propertyType1Count" value="10" />
    <param name="usecase.propertyType1SizeInKb" value="5000" />
    <param name="usecase.propertyType2Count" value="0" />
    <param name="usecase.propertyType2SizeInKb" value="0" />
  </testCase>



  <testCase name="NodeGetSamePropertyTestSingleMulti1-9">
    <param name="exo.testClass" value="org.exoplatform.jcr.benchmark.usecases.NodeGetSamePropertyTest" />
    <param name="usecase.propertyType1Count" value="1" />
    <param name="usecase.propertyType1SizeInKb" value="10" />
    <param name="usecase.propertyType2Count" value="9" />
    <param name="usecase.propertyType2SizeInKb" value="5000" />
