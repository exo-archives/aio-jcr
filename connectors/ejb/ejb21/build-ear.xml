<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.exoplatform.jcr</groupId>
    <artifactId>jcr-parent</artifactId>
    <version>1.10.10-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.jcr</groupId>
  <artifactId>exo.jcr.connectors.ejb21</artifactId>
  <name>EAR ejb-rest connector ejb2.1</name>
  <version>1.10.10-SNAPSHOT</version>
  <packaging>ear</packaging>
  <properties>
    <enforcer.skip>true</enforcer.skip>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ws</groupId>
      <artifactId>exo.ws.rest.ejbconnector2_1.bean</artifactId>
      <version>${org.exoplatform.ws.version}</version>
      <type>ejb</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.connectors.ejb21.bean</artifactId>
      <version>1.10.10-SNAPSHOT</version>
      <type>ejb</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.connectors.ejb21.client</artifactId>
      <version>1.10.10-SNAPSHOT</version>
      <type>jar</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <build>
    <finalName>jcr-rest-ejb-connector-21</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <defaultLibBundleDir>../APP-INF/lib</defaultLibBundleDir>
          <archive>
            <manifest>
              <addClasspath>false</addClasspath>
            </manifest>
          </archive>
          <modules>
            <javaModule>
              <groupId>org.exoplatform.jcr</groupId>
              <artifactId>exo.jcr.connectors.ejb21.client</artifactId>
              <bundleDir>.</bundleDir>
              <includeInApplicationXml>true</includeInApplicationXml>
            </javaModule>
            <ejbModule>
              <groupId>org.exoplatform.ws</groupId>
              <artifactId>exo.ws.rest.ejbconnector2_1.bean</artifactId>
            </ejbModule>
            <ejbModule>
              <groupId>org.exoplatform.jcr</groupId>
              <artifactId>exo.jcr.connectors.ejb21.bean</artifactId>
            </ejbModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
