<project>
  <parent>
    <groupId>org.exoplatform.jcr</groupId>
    <artifactId>config</artifactId>
    <version>1.10.3-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.exoplatform.jcr</groupId>
  <artifactId>exo.jcr.connectors.ejb30</artifactId>
  <name>EAR rest-ejb connector ejb3.0</name>
  <version>1.10.3-SNAPSHOT</version>
  <packaging>ear</packaging>
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ws</groupId>
      <artifactId>exo.ws.rest.ejbconnector3_0.bean</artifactId>
      <version>${org.exoplatform.ws.version}</version>
      <type>ejb</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.connectors.ejb30.bean</artifactId>
      <version>1.10.3-SNAPSHOT</version>
      <type>ejb</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.jcr</groupId>
      <artifactId>exo.jcr.connectors.ejb30.client</artifactId>
      <version>1.10.3-SNAPSHOT</version>
      <type>jar</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <build>
    <finalName>jcr-rest-ejb-connector-30</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <defaultLibBundleDir>../APP-INF/lib</defaultLibBundleDir>
          <archive>
            <manifest>
              <addClasspath>false</addClasspath>
            </manifest>
          </archive>
          <modules>
            <javaModule>
              <groupId>org.exoplatform.jcr</groupId>
              <artifactId>exo.jcr.connectors.ejb30.client</artifactId>
              <bundleDir>.</bundleDir>
              <includeInApplicationXml>true</includeInApplicationXml>
            </javaModule>
            <ejbModule>
              <groupId>org.exoplatform.ws</groupId>
              <artifactId>exo.ws.rest.ejbconnector3_0.bean</artifactId>
            </ejbModule>
            <ejbModule>
              <groupId>org.exoplatform.jcr</groupId>
              <artifactId>exo.jcr.connectors.ejb30.bean</artifactId>
            </ejbModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>